{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "rules": {
    "react/display-name": 0,
    "prefer-const": 1,
    "no-var": 2
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.5",
      "flowVersion": "0.53"
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
